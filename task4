#include<stdio.h>
int main()
{
	printf("Please type the number corresponding to the food item you want to order: \n 1.Pizza, Rs239 \n 2.Burger, Rs129 \n 3.Pasta, Rs179 \n 4.French Fries, Rs99 \n 5.Sandwich, Rs149");
	int a;
	scanf("%d", &a);
	switch(a)
	{
		case 1:
			printf("You Picked: \n Food item- Pizza \n Price- Rs239");
			break;
		case 2:
			printf("You Picked: \n Food item- Burger \n Price- Rs129");
			break;
		case 3:
			printf("You Picked: \n Food item- Pasta \n Price- Rs179");
			break;
		case 4:
			printf("You Picked: \n Food item- French Fries \n Price- Rs99");
			break;
		case 5:
			printf("You Picked: \n Food item- Sandwich \n Price- Rs149");
			break;
		default:
			printf("Invalid Choice");
	}
	return 0;
}
